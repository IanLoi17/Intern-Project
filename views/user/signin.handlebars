<link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
<style>
    .text-center {
        text-transform: uppercase;
        font-weight: 700;
    }

    #label {
        margin-right: 10px;
    }

    #signupLink {
        text-decoration: none;
    }

    #buttondiv {
        margin-top: 14px;
    }
</style>
<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>


<div class="container">
    <div class="card">
        <img src="" alt="">

        <div class="card-body">
            <h2 class="text-center">Sign in</h2>


            <form method="post" action="/user/signin">
                <div class="row">
                    <div class="form-group form-inline col-sm-12 col-md-12 col-lg-12">
                        <label id="label" class="text-dark font-weight-bold">Username:</label>
                        <input type="text" class="form-control col-sm-12 col-md-10 col-lg-10" value="{{username}}" name="username" placeholder="Username" class="form-control" autocomplete="off" required>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group form-inline col-sm-12 col-md-12 col-lg-12">
                        <label id="label" class="text-dark font-weight-bold">Password:</label>
                        <input type="password" class="form-control col-sm-12 col-md-10 col-lg-10" value="{{password}}" name="password" placeholder="Password" class="form-control" autocomplete="off" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <p>Do not have an account? Click <a id="signupLink" href="/signup">here</a> to sign up for an account</p>
                    </div>
                </div>

                <div id="buttondiv" class="row">
                    <div class="form-group form-inline col-sm-12 col-md-12 col-lg-12">
                        <button class="btn btn-primary">SIGN IN</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>