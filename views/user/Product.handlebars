<div class="container">
    <div class="card" style="height: 100%;">
        <div class="row">
            {{#each products}}
            <div class="col-sm-12 col-md-6 col-lg-3">
                <form method="post" action="">
                    <div>
                        <img src="{{ProductImage}}" alt="" class="border img-thumbnail img-fluid" style="height:95%;width:100%">
                        <p>{{ProductName}}</p>
                        <p>${{ProductSellingPrice}}</p>
                        <p id="qty">Quantity: {{ProductQuantity}}</p>
                        <input type="hidden" name="qty" />
                        <!--<button id="purchase" class="btn btn-primary" >Buy Now</button>-->
                        <a class="btn btn-primary" href="/user/ProductDetails/{{id}}">Details</a>
                    </div>
                </form>
            </div>
            {{/each}}
        </div>
    </div>
</div>

