<script>
    if ('{{user.role}}' == "Administrator") {
        document.getElementById("adminViewProduct").style.display = "block";
        //document.getElementById("adminAddProduct").style.display = "block";
        document.getElementById("adminUser").style.display = "block";
        document.getElementById("dropdown").style.marginLeft = "260px";
    }

    else if ('{{user.role}}' == "User") {
        document.getElementById("adminViewProduct").style.display = "none";
        //document.getElementById("adminAddProduct").style.display = "none";
        document.getElementById("adminUser").style.display = "none";
        document.getElementById("dropdown").style.marginLeft = "-100px";
    }


    if ('{{user.profileImgURL}}' == "") {
        document.getElementById("image").src = "/public/images/profileImg.png";
    }

    else {
        document.getElementById("image").src = "{{user.profileImgURL}}";
    }
</script>


