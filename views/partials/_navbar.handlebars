                <img src="{{user.profileImgURL}}" id="image" style="width:65px; height:55px; cursor:pointer" data-toggle="dropdown" class="btn dropdown-toggle img-circle">

                <ul id="dropdown" class="dropdown-menu">
                    <p class="font-weight-bold text-dark text-center">Welcome {{user.username}}</p>
                    <hr>
                    <li class="navbar-brand font-weight-bold">
                        <a href="/user/profile" class="nav-link"><i class="fas fa-user-circle"></i> View profile</a>
                        <a href="/user/changePassword" class="nav-link"><i class="fa fa-unlock-alt"></i> Change password</a>
                        <a href="/signout" class="nav-link"><i class="fas fa-sign-out-alt" aria-hidden="true"></i> Sign out</a>
                    </li>
                </ul>
            </li>
        </ul>

        {{else}}
        <ul id="nav navbar">
            <li class="navbar-brand font-weight-bold"><a href="/signup" class="nav-link">Sign up</a></li>
