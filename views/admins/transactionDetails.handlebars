{{#if products}}
<table class="table table-hover table-bordered table-responsive">
    <thead>
        <tr>
            {{!-- <td>Product ID</td> --}}
            <td>Product Name</td>
            <td>Product Image</td>
            {{!-- <td>Units Purchased</td> --}}
            <td>Inventory</td>
            {{!-- <td>Cost</td> --}}
            <td>Buying DT</td>
            <td>Selling Price</td>
            {{!-- <td>Selling DT</td> --}}
            {{!-- <td>Location</td> --}}
        </tr>
    </thead>
    {{#each products}}
    <tr>
        <td>{{ProductName}}</td>
        <td>{{ProductImage}}</td>
        <td>{{ProductQuantity}}</td>
        <td>{{formatDate BuyingDateTime 'DD/MM/YYYY HH:mm:ss'}}</td>>
        <td>{{ProductSellingPrice}}</td>
    </tr>
    {{/each}}
</table>

{{else}}
<h2 class="font-weight-bold">No Transaction Yet</h2>
{{/if}}