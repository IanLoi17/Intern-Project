<div class="container">
    <form method="post" action="/admin/addProductAdmin">
        <div class="row">
            <div class="form-inline form-group col-sm-12 col-md-12 col-lg-12">
                <label id="label" for="ProductName" class="text-dark font-weight-bold">Product name:</label>
                <input type="text" class="form-control col-sm-12 col-md-10 col-lg-10"
                    placeholder="Product name" autocomplete="off" name="ProductName" required>
            </div>

            <div class="form-inline form-group col-sm-12 col-md-12 col-lg-12">
                <label for="ProductType" class="text-dark font-weight-bold">Product type:</label>
                <select name="ProductType" class="form-control" placeholder="Product type">
                    <option value="Beauty">Beauty</option>
                    <option value="Computers">Computers</option>
                    <option value="Sunglasses and Jewellery">Sunglasses and Jewellery</option>
                    <option value="Groceries">Groceries</option>
                </select>
            </div>

            <div class="form-inline form-group col-sm-12 col-md-12 col-lg-12">
                <label for="ProductDesc" class="text-dark font-weight-bold">Product description:</label>
                <textarea name="ProductDesc" cols="35" rows="4" class="form-control col-sm-12 col-md-10 col-lg-10"></textarea>
            </div>

            <div class="form-inline form-group col-sm-12 col-md-12 col-lg-12">
                <label for="ProductQuantity" class="text-dark font-weight-bold">Product quantity:</label>
                <input type="number" name="ProductQuantity" placeholder="Product quantity" autocomplete="off" class="form-control col-sm-12 col-md-10 col-lg-10">
            </div>

            <div class="form-inline form-group col-sm-12 col-md-12 col-lg-12">
                {{!-- <label for="ProductImage" class="text-dark font-weight-bold">Product image:</label> --}}
                <input type="file" id="productImg" name="productImg" accept="image/png,image/jpeg,image/jpg,image/gif" class="col-sm-12 col-md-10 col-lg-10">
                <img id="productImg" src="/images/no-image.jpg" />
                <input type="hidden" id="productImgURL" name="productImgURL" />
            </div>

            <div class="form-inline form-group col-sm-12 col-md-12 col-lg-12">
                <label for="ProductPrice" class="text-dark font-weight-bold">Product price:</label>
                <input type="text" name="ProductPrice" class="form-control col-sm-12 col-md-10 col-lg-10" autocomplete="off">
            </div>

            <div class="form-group col-sm-12 col-md-12 col-lg-12">
                <button type="submit" class="btn btn-primary">Add product</button>
            </div>
        </div>

    </form>

    <div class="form-group col-sm-12 col-md-12 col-lg-12">
        <button class="btn btn-primary" onclick="location.href='/admin/adminProductsView'">Cancel</button>
    </div>
</div>



